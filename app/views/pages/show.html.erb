<h1>CSV Data</h1>

<% Rails.logger.debug("the rows are #{@rows}")%>
<% if @rows.any? %>

  <table class="table">
    <thead>
      <tr>
        <% @rows.first.keys.each do |header| %>
          <th><%= header %></th>
        <% end %>
      </tr>
    </thead>
    <tbody>
      <% @rows.each do |row| %>
        <tr>
          <% row.each do |_, value| %>
            <td><%= value %></td>
          <% end %>
        </tr>
      <% end %>
    </tbody>
  </table>
<% else %>
  <p>No data available</p>
<% end %>